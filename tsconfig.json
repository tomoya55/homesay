{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "baseUrl": "./",
        "types": [
            "node",
            "jest"
        ],
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true
    },
    "include": [
        "./src/**/*",
        "./test/**/*",
    ]
}
